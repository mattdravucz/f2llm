{
  "type": "object",
  "properties": {
    "modified_files": {
      "type": "array",
      "description": "Files that were modified; include full content and notes.",
      "items": {
        "type": "object",
        "required": ["file_path", "content"],
        "properties": {
          "file_path": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "content": {
            "type": "string",
            "description": "Wrapped in triple backticks with language if applicable."
          }
        }
      }
    },
    "added_files": {
      "type": "array",
      "description": "Newly created files; include full content and notes.",
      "items": {
        "type": "object",
        "required": ["file_path", "content"],
        "properties": {
          "file_path": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "content": {
            "type": "string",
            "description": "Wrapped in triple backticks with language if applicable."
          }
        }
      }
    },
    "unchanged_files": {
      "type": "array",
      "description": "Unchanged files; only list their paths.",
      "items": {
        "type": "string"
      }
    },
    "deleted_files": {
      "type": "array",
      "description": "Deleted files; only list their paths.",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["modified_files", "added_files", "unchanged_files", "deleted_files"]
}
