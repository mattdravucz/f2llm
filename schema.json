{
  "type": "object",
  "properties": {
    "modified_files": {
      "type": "array",
      "description": "Files that were modified; include full content and notes.",
      "items": {
        "type": "object",
        "required": ["file_path", "content"],
        "properties": {
          "file_path": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "content": {
            "type": "string",
            "description": "Wrapped in triple backticks with language if applicable."
          }
        }
      }
    },
    "added_files": {
      "type": "array",
      "description": "Newly created files; include full content and notes.",
      "items": {
        "type": "object",
        "required": ["file_path", "content"],
        "properties": {
          "file_path": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "content": {
            "type": "string",
            "description": "Wrapped in triple backticks with language if applicable."
          }
        }
      }
    },
    "moved_files": {
      "type": "array",
      "description": "Files that were moved or renamed; include old and new paths with notes.",
      "items": {
        "type": "object",
        "required": ["old_path", "new_path"],
        "properties": {
          "old_path": {
            "type": "string"
          },
          "new_path": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "unchanged_files": {
      "type": "array",
      "description": "Unchanged files; only list their paths.",
      "items": {
        "type": "string"
      }
    },
    "deleted_files": {
      "type": "array",
      "description": "Deleted files; include paths and reason for deletion.",
      "items": {
        "type": "object",
        "required": ["file_path", "notes"],
        "properties": {
          "file_path": {
            "type": "string"
          },
          "notes": {
            "type": "string",
            "description": "Reason for deletion."
          }
        }
      }
    }
  },
  "required": ["modified_files", "added_files", "moved_files", "unchanged_files", "deleted_files"]
}